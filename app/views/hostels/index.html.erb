<div class="filter-container">
  <form action="/hostels" method="get">
    <label class="dropdown">
      <div class="btn-filter">
        Room type
      </div>
      <input type="checkbox" class="dd-input" id="test">
      <div class="dd-menu">
        <label for="female-only-false">
          <input type="checkbox" class="hidden" value="false" id="female-only-false" name="female_only">
          Mixed Room
        </label>
        <label for="female-only-true">
          <input type="checkbox" class="hidden" value="true" id="female-only-true" name="female_only">
          Female Only
        </label>
      </div>
    </label>

    <label class="dropdown">
      <div class="btn-filter">
        Pets
      </div>
      <input type="checkbox" class="dd-input" id="test">
      <div class="dd-menu">
        <label for="pets-false">
          <input type="checkbox" class="hidden" value="false" id="pets-false" name="pets">
          No Pets
        </label>
        <label for="pets-true">
          <input type="checkbox" class="hidden" value="true" id="pets-true" name="pets">
          Pets Allowed
        </label>
      </div>
    </label>

    <label class="dropdown">
      <div class="btn-filter">
        Alcohol
      </div>
      <input type="checkbox" class="dd-input" id="test">
      <div class="dd-menu">
        <label for="alcohol-false">
          <input type="checkbox" class="hidden" value="false" id="alcohol-false" name="alcohol">
          No Alcohol
        </label>
        <label for="alcohol-true">
          <input type="checkbox" class="hidden" value="true" id="alcohol-true" name="alcohol">
          Alcohol Allowed
        </label>
      </div>
    </label>
    </label>
    <input type="submit" value="Update">
  </form>
</div>

<div
  id="map"
  style="width: 100%;
  height: 255px;"
  data-markers="<%= @markers.to_json %>"
></div>

<div class="container">
  <div class="row">
    <div class="carousel">
      <%@hostels.each do |hostel|%>
        <div class="col-xs-12">
        <!-- insert <div class="card"> -->
          <div class="card hostel-card" style ="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path hostel.photo %>);">
            <h2 class="card-name"> <%= hostel.name %></h2>
            <h3 class="card-address"> <%= hostel.address %> </h>
          </div>
          <p class="price"><%= humanized_money_with_symbol(hostel.price)  %></p>
          <div class="btn-index">
            <%= link_to "Choose Hostel", hostel_path(hostel), class: "btn btn-book" %>
          </div>
         </div>
      <% end %>
    </div>

  </div>
</div>

<%# javascript_pack_tag "carousel" %>
<%= javascript_pack_tag 'filters' %>

<div class="filter-container">
  <label class="dropdown">
    <div class="btn-filter">
      Room type
    </div>
    <input type="checkbox" class="dd-input" id="test">
    <ul class="dd-menu">
      <li>Mixed Room</li>
      <li>Female Only</li>
    </ul>
  </label>
  <label class="dropdown">
    <div class="btn-filter">
      Pets
    </div>
    <input type="checkbox" class="dd-input" id="test">
    <ul class="dd-menu">
      <li>No pets</li>
      <li>Pets allowed</li>
    </ul>
  </label>
  <label class="dropdown">
    <div class="btn-filter">
      Alcohol
    </div>
    <input type="checkbox" class="dd-input" id="test">
    <ul class="dd-menu">
      <li>No alcohol</li>
      <li>Alcohol allowed</li>
    </ul>
  </label>
</div>


<div
  id="map"
  style="width: 100%;
  height: 255px;"
  data-markers="<%= @markers.to_json %>"
></div>

<div class="container">
  <div class="row">
    <div class="carousel">
      <%@hostels.each do |hostel|%>
        <div class="col-xs-12">
        <!-- insert <div class="card"> -->
          <div class="card hostel-card" style ="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path hostel.photo %>);">
            <h2 class="card-name"> <%= hostel.name %></h2>
            <h3 class="card-address"> <%= hostel.address %> </h>
          </div>
          <p class="price"><%= humanized_money_with_symbol(hostel.price)  %></p>
          <div class="btn-index">
            <%= link_to "Choose Hostel", hostel_path(hostel), class: "btn btn-book" %>
          </div>
         </div>
      <% end %>
    </div>

  </div>
</div>

<%# javascript_pack_tag "carousel" %>





<%#= form_tag hostel_bookings_path(@hostel) do %>
  <%#= hidden_field_tag 'hostel_id', @hostel.id %>
  <%#= submit_tag 'Book Now', class: 'btn btn-book' %>
<%# end %>





<h1>Booking of hostel <%= @booking.hostel_sku %></h1>
<%= form_tag hostel_booking_payments_path(@hostel, @booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Hostel"
    data-email="<%= current_user.email %>"
    data-description="Hostel <%= @booking.hostel_sku %>"
    data-amount="<%= @booking.amount_cents %>"
    data-currency="<%= @booking.amount.currency %>"></script>

<% end %>




<div class="hostel-show">
  <%= image_tag "hostel.jpg", class: "hostel-img" %>
  <h2><%= @booking.hostel_sku %> <%= @hostel.name %></h2>
  <%= form_tag hostel_booking_payments_path(@hostel, @booking) do %>
  <p class="address"><%= @hostel.address %></p>
  <div class="containter-icons">
    <div class="no-dog">
      <%= image_tag "no.png", class: "no-icon" %>
      <%= image_tag "dog.png", class: "img-icon" %>
    </div>
    <%= image_tag "mixedroom.png", class: "img-icon" %>
    <div class="no-dog">
    <%= image_tag "no.png", class: "no-icon" %>
    <%= image_tag "beer.png", class: "img-icon" %>
    </div>
  </div>
<!--   <p>phone number</p> -->
    <article>
      <label class="amount">
        <span class="price"> <%= humanized_money_with_symbol(@booking.amount) %></span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="Hostel"
      data-email="<%= current_user.email %>"
      data-description="Hostel <%= @booking.hostel_sku %>"
      data-amount="<%= @booking.amount_cents %>"
      data-currency="<%= @booking.amount.currency %>"></script>

  <% end %>


</div>


